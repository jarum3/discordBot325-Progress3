{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": false,
    "rootDir": "./",
    "outDir": "./build",
    "target": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./node_modules",
    "./build"
  ],
}